<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="yuria.testmap.RicProdActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.51">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="true"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_marginTop="-0dp">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prezzo (Euro)"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="18sp"
                android:layout_marginStart="36dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView9"
                tools:layout_constraintBaseline_creator="1"
                tools:layout_constraintLeft_creator="1"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distanza (Km)"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="18sp"
                android:layout_marginStart="36dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/distanzaTxt"
                tools:layout_constraintBaseline_creator="1"
                tools:layout_constraintLeft_creator="1"
                app:layout_constraintLeft_toLeftOf="parent" />

            <Spinner
                android:id="@+id/tipoSpinner"
                android:layout_width="144dp"
                android:layout_height="38dp"
                android:layout_marginBottom="38dp"
                android:layout_marginEnd="35dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="30dp"
                android:entries="@array/tipo2"
                app:layout_constraintBottom_toTopOf="@+id/dataDaTxt"
                app:layout_constraintLeft_toRightOf="@+id/textView4"
                app:layout_constraintRight_toRightOf="@+id/textView5"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_constraintBottom_creator="1"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="1"
                tools:layout_editor_absoluteY="30dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="18sp"
                android:layout_marginStart="10dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/dataATxt"
                tools:layout_constraintBaseline_creator="1"
                tools:layout_constraintLeft_creator="1"
                app:layout_constraintLeft_toRightOf="@+id/dataDaTxt" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="18sp"
                app:layout_constraintRight_toLeftOf="@+id/prezzoATxt"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintBottom_creator="1"
                app:layout_constraintBottom_toBottomOf="@+id/prezzoDaTxt"
                android:layout_marginEnd="9dp"
                android:layout_marginBottom="11dp"
                android:layout_marginRight="9dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Da"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="18sp"
                tools:layout_constraintTop_creator="1"
                android:layout_marginStart="20dp"
                android:layout_marginTop="36dp"
                app:layout_constraintTop_toBottomOf="@+id/scegliDaBtn"
                tools:layout_constraintLeft_creator="1"
                app:layout_constraintLeft_toRightOf="@+id/textView7" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Da"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="18sp"
                android:layout_marginStart="11dp"
                tools:layout_constraintTop_creator="1"
                android:layout_marginTop="7dp"
                tools:layout_constraintLeft_creator="1"
                app:layout_constraintTop_toTopOf="@+id/dataDaTxt"
                app:layout_constraintLeft_toRightOf="@+id/textView8" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:text="Data"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="18sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView11"
                tools:layout_constraintBaseline_creator="1"
                tools:layout_constraintLeft_creator="1"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="18sp"
                android:layout_marginStart="36dp"
                tools:layout_constraintTop_creator="1"
                android:layout_marginTop="37dp"
                tools:layout_constraintLeft_creator="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/dataDaTxt"
                android:layout_width="107dp"
                android:layout_height="44dp"
                android:layout_marginEnd="51dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="47dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="16sp"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintLeft_toRightOf="@+id/textView4"
                app:layout_constraintRight_toLeftOf="@+id/scegliABtn"
                app:layout_constraintTop_toBottomOf="@+id/textView4"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="1"
                tools:layout_editor_absoluteY="98dp" />

            <EditText
                android:id="@+id/dataATxt"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/dataDaTxt"
                app:layout_constraintLeft_toLeftOf="@+id/textView5"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/dataDaTxt"
                tools:layout_constraintBottom_creator="1"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="1" />

            <EditText
                android:id="@+id/prezzoDaTxt"
                android:layout_width="46dp"
                android:layout_height="0dp"
                android:layout_marginEnd="29dp"
                android:layout_marginStart="31dp"
                android:ems="10"
                android:inputType="number"
                android:textAlignment="center"
                app:layout_constraintRight_toLeftOf="@+id/textView13"
                tools:layout_constraintRight_creator="1"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView9"
                tools:layout_constraintBaseline_creator="1"
                tools:layout_constraintLeft_creator="1"
                app:layout_constraintLeft_toLeftOf="@+id/textView9"
                app:layout_constraintHorizontal_bias="0.409" />

            <EditText
                android:id="@+id/prezzoATxt"
                android:layout_width="46dp"
                android:layout_height="0dp"
                android:layout_marginEnd="33dp"
                android:layout_marginStart="34dp"
                android:ems="10"
                android:inputType="number"
                android:textAlignment="center"
                tools:layout_constraintRight_creator="1"
                app:layout_constraintRight_toRightOf="@+id/scegliABtn"
                tools:layout_constraintBaseline_creator="1"
                tools:layout_constraintLeft_creator="1"
                app:layout_constraintLeft_toLeftOf="@+id/dataATxt"
                app:layout_constraintHorizontal_bias="0.507"
                android:layout_marginTop="26dp"
                app:layout_constraintTop_toBottomOf="@+id/scegliABtn" />

            <EditText
                android:id="@+id/distanzaTxt"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:ems="10"
                android:inputType="number"
                android:text="1"
                android:textAlignment="center"
                tools:layout_constraintTop_creator="1"
                tools:layout_constraintRight_creator="1"
                app:layout_constraintRight_toRightOf="@+id/prezzoDaTxt"
                android:layout_marginTop="34dp"
                app:layout_constraintTop_toBottomOf="@+id/prezzoDaTxt"
                tools:layout_constraintLeft_creator="1"
                app:layout_constraintLeft_toRightOf="@+id/textView9"
                app:layout_constraintHorizontal_bias="1.0" />

            <Button
                android:id="@+id/scegliDaBtn"
                android:layout_width="88dp"
                android:layout_height="48dp"
                android:text="Scegli Da"
                android:textSize="12sp"
                android:layout_marginEnd="9dp"
                tools:layout_constraintTop_creator="1"
                tools:layout_constraintRight_creator="1"
                app:layout_constraintRight_toRightOf="@+id/dataDaTxt"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/dataDaTxt"
                android:layout_marginRight="12dp" />

            <Button
                android:id="@+id/scegliABtn"
                android:layout_width="88dp"
                android:layout_height="48dp"
                android:text="Scegli A"
                android:textSize="12sp"
                android:layout_marginEnd="13dp"
                tools:layout_constraintTop_creator="1"
                tools:layout_constraintRight_creator="1"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/dataATxt" />

        </android.support.constraint.ConstraintLayout>


    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
        android:id="@+id/homeRicBtn"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="Home"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/cercaBtn"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cercaBtn"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="32dp" />

        <Button
            android:id="@+id/cercaBtn"
            android:layout_width="88dp"
            android:layout_height="48dp"
            android:text="Cerca"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintRight_creator="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="35dp" />
    </RelativeLayout>

</LinearLayout>
