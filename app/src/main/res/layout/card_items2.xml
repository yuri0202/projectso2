<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="4dp"
    android:background="@color/backGround"

    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        card_view:cardBackgroundColor="#d7d9db"
        card_view:cardCornerRadius="10dp"
        card_view:layout_constraintHorizontal_bias="0.0"
        card_view:layout_constraintLeft_toLeftOf="parent"
        card_view:layout_constraintRight_toRightOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="21dp">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="174dp"
            android:paddingBottom="-20dp"
            android:paddingLeft="0dp"
            android:paddingTop="-20dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

            <TextView
                android:id="@+id/cardText21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/cardText22"
                android:layout_alignStart="@+id/cardText22"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:text="Nome: blablabla"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="18sp"
                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/cardText22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/cardText23"
                android:layout_alignStart="@+id/cardText23"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="16dp"
                android:text="Tipologia: blablabla"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="18sp"
                card_view:layout_constraintLeft_toLeftOf="@+id/cardText21"
                card_view:layout_constraintTop_toBottomOf="@+id/cardText21" />

            <TextView
                android:id="@+id/cardText23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/cardDettagli2Btn"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="17dp"
                android:layout_marginTop="16dp"
                android:text="Prezzo: blablabla"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="18sp"
                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/cardText22" />

            <Button
                android:id="@+id/cardDettagli2Btn"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="-6dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/ripple"
                android:drawableLeft="@drawable/ic_info_outline_black_24dp"
                android:paddingLeft="18dp"
                android:text="DETTAGLI"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintHorizontal_bias="1.0"
                card_view:layout_constraintLeft_toLeftOf="parent"
                tools:layout_constraintBottom_creator="1"
                tools:layout_constraintLeft_creator="1"
                card_view:layout_constraintRight_toRightOf="parent" />




        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>
