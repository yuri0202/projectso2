<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="yuria.shApping.activities.ModificaRegistrazioneActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:layout_weight="0.51"
        app:layout_constraintBottom_toTopOf="@+id/RegistraBtn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="true"
            tools:layout_marginTop="-0dp">

            <EditText
                android:id="@+id/addressTxt"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Indirizzo, CittÃ "
                android:inputType="textMultiLine"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:layout_constraintBaseline_creator="1"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/prezzoTxt" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:text="Nome"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/nomeTxt"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:layout_constraintBottom_creator="1"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintTop_creator="1" />

            <Spinner
                android:id="@+id/tipoSpinner"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_marginEnd="35dp"
                android:entries="@array/tipo"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView23"
                app:layout_constraintRight_toRightOf="parent"
                tools:layout_constraintBaseline_creator="1"
                tools:layout_constraintRight_creator="1" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="130dp"
                android:text="Tipo"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintTop_creator="1" />

            <EditText
                android:id="@+id/prezzoTxt"
                android:layout_width="76dp"
                android:layout_height="42dp"
                android:layout_marginEnd="124dp"
                android:layout_marginStart="125dp"
                android:layout_marginTop="45dp"
                android:ems="10"
                android:inputType="numberDecimal"
                android:textAlignment="viewStart"
                app:layout_constraintLeft_toLeftOf="@+id/textView32"
                app:layout_constraintTop_toBottomOf="@+id/tipoSpinner"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="1" />

            <EditText
                android:id="@+id/nomeTxt"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_marginBottom="41dp"
                android:layout_marginEnd="66dp"
                android:layout_marginRight="66dp"
                android:layout_marginTop="24dp"
                android:ems="10"
                android:inputType="text"
                android:textAlignment="viewStart"
                app:layout_constraintBottom_toTopOf="@+id/tipoSpinner"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_constraintBottom_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="1" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="11dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Indirizzo"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/addressTxt"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/addressTxt"
                tools:layout_constraintBottom_creator="1"
                tools:layout_constraintLeft_creator="1" />

            <Button
                android:id="@+id/positionBtn"
                android:layout_width="88dp"
                android:layout_height="62dp"
                android:layout_marginBottom="144dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/ripple"
                android:text="La tua posizione"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:layout_constraintBottom_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="1"
                app:layout_constraintLeft_toRightOf="@+id/addressTxt"
                android:layout_marginLeft="8dp"
                app:layout_constraintHorizontal_bias="0.545"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tipoSpinner"
                app:layout_constraintVertical_bias="0.83" />

            <TextView
                android:id="@+id/textView32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Prezzo (Euro)"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="18sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/prezzoTxt"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:layout_constraintBaseline_creator="1"
                tools:layout_constraintLeft_creator="1" />

            <TextView
                android:id="@+id/textView33"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="83dp"
                android:layout_marginEnd="14dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Dettagli (Facoltativo)"
                android:textAlignment="viewStart"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.533"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/detailsTxt"
                app:layout_constraintTop_toTopOf="@+id/detailsTxt"
                tools:layout_constraintBottom_creator="1"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="1" />

            <EditText
                android:id="@+id/detailsTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="39dp"
                android:layout_marginStart="37dp"
                android:layout_marginTop="60dp"
                android:ems="10"
                android:inputType="textMultiLine"
                android:textAlignment="viewStart"
                app:layout_constraintLeft_toLeftOf="@+id/addressTxt"
                app:layout_constraintTop_toBottomOf="@+id/addressTxt"
                tools:layout_constraintBottom_creator="1"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="1"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.602" />


        </android.support.constraint.ConstraintLayout>


    </ScrollView>


    <Button
        android:id="@+id/indietroRicBtn"
        android:layout_width="0dp"
        android:layout_height="67dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/ripple"
        android:text="INDIETRO"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/RegistraBtn"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <Button
        android:id="@+id/RegistraBtn"
        android:layout_width="0dp"
        android:layout_height="67dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="0dp"
        android:layout_weight="0.5"
        android:background="@drawable/ripple"
        android:text="CONFERMA"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/indietroRicBtn"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1" />

</android.support.constraint.ConstraintLayout>
