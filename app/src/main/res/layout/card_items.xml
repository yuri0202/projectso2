<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="#d14836"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="15dp"
    tools:contentPaddingLeft="30dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="206dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/cardText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/cardText2"
            android:layout_alignStart="@+id/cardText2"
            android:layout_marginBottom="20dp"
            android:text="Nome: blablabla"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/cardText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/cardText3"
            android:layout_alignStart="@+id/cardText3"
            android:layout_marginBottom="20dp"
            android:text="Tipologia: blablabla"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/cardText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/cardDettagliBtn"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="17dp"
            android:text="Prezzo: blablabla"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="18sp" />

        <Button
            android:id="@+id/cardMapBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginBottom="14dp"
            android:layout_marginEnd="44dp"
            android:text="MAPPA" />

        <Button
            android:id="@+id/cardDettagliBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/cardMapBtn"
            android:layout_alignBottom="@+id/cardMapBtn"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            android:layout_marginStart="44dp"
            android:text="DETTAGLI" />


    </RelativeLayout>


</android.support.v7.widget.CardView>
