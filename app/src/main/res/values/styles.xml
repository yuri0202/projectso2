<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorP</item>
        <item name="colorPrimaryDark">@color/colorPDark</item>
        <item name="colorAccent">@color/colorPLight</item>
        <item name="android:panelFullBackground">@android:color/darker_gray</item>


    </style>


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:colorBackground">@color/backGround</item>
        <item name="android:textColor">@color/colorPLight</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

        <item name="android:colorBackground">@color/backGround</item>
        <item name="android:textColor">@color/colorPLight</item>
    </style>






</resources>
